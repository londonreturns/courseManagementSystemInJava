package utility;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import javax.swing.JOptionPane;

public class DatabaseConnection {

    private static Connection conn;
    private static ResultSet result;

    public void connectDatabase() {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/tempdb", "root", "");
        } catch (ClassNotFoundException | SQLException e) {
            String error = "DB Connection error: " + e.getMessage();
            JOptionPane.showMessageDialog(null, error, "Error", JOptionPane.WARNING_MESSAGE);
        }
    }

    public void insert(String sqlQuery) {
        try (PreparedStatement preparedStatement = conn.prepareStatement(sqlQuery)) {
            preparedStatement.executeUpdate();
        } catch (SQLException e) {
            String error = "Error during insertion: " + e.getMessage();
            JOptionPane.showMessageDialog(null, error, "Error", JOptionPane.WARNING_MESSAGE);
        }
    }

    public ResultSet select(String sqlQuery) {
        try (PreparedStatement preparedStatement = conn.prepareStatement(sqlQuery)) {
            result = preparedStatement.executeQuery();
            return result;
        } catch (SQLException e) {
            String error = "Error during selection: " + e.getMessage();
            JOptionPane.showMessageDialog(null, error, "Error", JOptionPane.WARNING_MESSAGE);
            return null;
        }
    }

    public void closeDatabase() {
        try {
            if (result != null) {
                result.close();
            }
            if (conn != null) {
                conn.close();
            }
        } catch (SQLException e) {
            String error = "Error while closing db: " + e.getMessage();
            JOptionPane.showMessageDialog(null, error, "Error", JOptionPane.WARNING_MESSAGE);
        }
    }
}
