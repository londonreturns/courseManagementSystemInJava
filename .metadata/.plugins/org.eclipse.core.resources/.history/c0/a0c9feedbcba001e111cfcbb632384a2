package courseManagementSystem;

import java.awt.Color;

public class StandardAlertFrame extends StandardFrame{
	
	
	
	StandardAlertFrame(){
		super();
		setBounds();
		setLayout(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	
	StandardAlertFrame(int x_coord, int y_coord, int width, int height){
		setBounds(x_coord, y_coord, width, height);
		setLayout(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	
	StandardAlertFrame(int x_coord, int y_coord, int width, int height, Color color){
		setBounds(x_coord, y_coord, width, height);
		setLayout(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		container.setBackground(color);
	}
}
