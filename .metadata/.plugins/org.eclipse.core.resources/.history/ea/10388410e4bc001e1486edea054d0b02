package utility;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

import javax.swing.JOptionPane;

import exception.DatabaseException;

public class DatabaseConnection {
	
	static Connection conn;
	static Statement st;
	static ResultSet result;
	
	public static void connect(String query){
		try {
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/tempdb", "root", "");
			
			st = conn.createStatement();
			
			ResultSet result = st.executeQuery(query);
			
			result.next();
			String idFROMDB = result.getString("id");
			String passFROMDB = result.getString("Password");
			String typeFROMDB = result.getString("Type");
			System.out.println(
								"FROM DB Id: " + idFROMDB +
								" Password: " + passFROMDB +
								" Type of user: " + typeFROMDB);
			
		}catch (Exception e) {
			String error = "DB Connection error";
			JOptionPane.showMessageDialog(null, error, "Error", JOptionPane.WARNING_MESSAGE);
		}
	}
}
