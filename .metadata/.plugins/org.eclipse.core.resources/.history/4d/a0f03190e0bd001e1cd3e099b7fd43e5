package utility;

import java.awt.Color;

import javax.swing.JLabel;

import user.Student;

public class StudentFrame extends MenuFrame {

	public StudentFrame(){
		super();
	}
	
	public StudentFrame(int x_coord, int y_coord, int width, int height){
		super(x_coord, y_coord, width, height);
	}
	
	public StudentFrame(int x_coord, int y_coord, int width, int height, Color color){
		super(x_coord, y_coord, width, height, color);
	}

	public void changeRightPanel(Student student, String menu) {
		rightPanel.removeAll();
		switch(typeOfUser) {
			case "student":
				switch (menu) {
					case "Dashboard":
						JLabel nameLabel = new JLabel("Name: " + student.getName());
				        JLabel idLabel = new JLabel("Roll Number: " + student.getId());
				        JLabel facultyLabel = new JLabel("Grade: " + student.getFaculty());
	
				        nameLabel.setBounds(20, 20, 200, 30);
				        idLabel.setBounds(20, 60, 200, 30);
				        facultyLabel.setBounds(20, 100, 200, 30);
	
				        rightPanel.add(nameLabel);
				        rightPanel.add(idLabel);
				        rightPanel.add(facultyLabel);
				        
				        this.add(rightPanel);
						break;
					case "Course":
						
						break;
					case "Teacher":
						
						break;
					case "Settings":
						
						break;
				}
				break;
			case "teacher":
				break;
			case "admin":
		}
		
	}

}
