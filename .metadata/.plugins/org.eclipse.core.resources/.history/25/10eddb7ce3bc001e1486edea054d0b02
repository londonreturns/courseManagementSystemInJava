package utility;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class DatabaseConnection {
	
	static Connection conn;
	static Statement st;
	static result;
	
	public static void connect(String query) {
		try {
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/tempdb", "root", "");
			
			st = conn.createStatement();
			
			ResultSet result = st.executeQuery("SELECT * FROM user WHERE id = 1234567;");
			
			result.next();
			String idFROMDB = result.getString("id");
			String passFROMDB = result.getString("Password");
			String typeFROMDB = result.getString("Type");
			System.out.println(
								"FROM DB Id: " + idFROMDB +
								" Password: " + passFROMDB +
								" Type of user: " + typeFROMDB);
			
		}catch (Exception e1) {
			System.out.println("DB ERROR");
		}
	}
}
