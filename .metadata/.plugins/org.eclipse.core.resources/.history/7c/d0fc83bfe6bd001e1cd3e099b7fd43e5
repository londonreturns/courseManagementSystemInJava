package utility;

import java.awt.Color;

import javax.swing.JLabel;

import user.Admin;
import user.Student;
import user.Teacher;

public class StudentFrame extends MenuFrame {

	public StudentFrame(){
		super();
	}
	
	public StudentFrame(int x_coord, int y_coord, int width, int height, Student student){
		super(x_coord, y_coord, width, height, student);
	}
	
	public StudentFrame(int x_coord, int y_coord, int width, int height, Color color){
		super(x_coord, y_coord, width, height, color);
	}

	public void changeRightPanel(String menu) {
		rightPanel.removeAll();
		switch (menu) {
			case "Dashboard":
				JLabel text  = new JLabel(menu);
				text.setBounds(0, 0, 100, 100);
				rightPanel.add(text);
		        add(rightPanel);
				break;
			case "Course":
				JLabel text2  = new JLabel(menu);
				text2.setBounds(0, 0, 100, 100);
				rightPanel.add(text2);
		        add(rightPanel);
				break;
		}
		
	}
	public void changeRightPanel(Teacher teacher, String menu) {
		
	}
	
	public void changeRightPanel(Admin admin, String menu) {
		
	}
}
